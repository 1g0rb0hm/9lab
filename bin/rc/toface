#!/bin/rc
rfork e
ext=`{echo $1 | tr A-Z a-z}
switch($ext){
case *.bmp
	cmd=bmp
case *.gif
	cmd=gif
case *.ico
	cmd=ico
case *.jpg *.jpeg
	cmd=jpg
case *.png
	cmd=png
case *.ppm
	cmd=ppm
case *.tga
	cmd=tga
case *.tif *.tiff
	cmd=tif
case *.v210
	cmd=v210
case *.yuv
	cmd=yuv
case *.bit
	iconv -c m8 $1 | resample -x 48 -y 48
	exit
}
eval $cmd -c $1 | iconv -c m8 | resample -x 48 -y 48
